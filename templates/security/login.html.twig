{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="mb-2">
    {% if error %}
        <div class="bg-neutral text-center">Email et/ou mot de passe invalide.</div>
    {% endif %}

    <form class="container grid place-content-center bg-neutral rounded-box p-4" action="{{ path('app_login') }}" method="post">
          {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.pseudo }}
        </div>
    {% endif %}

        <h1 class="text-4xl">Connexion</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de Passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <div class="mb-3">
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
    </div>

       <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
        <label>
            <input type="checkbox" name="_remember_me" />
            Se souvenir de moi
        </label>



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-sm my-2 btn-primary" type="submit">
        Connexion
    </button>
</form>
</div>
{% endblock %}
