{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1 class="text-3xl text-center">Profil du Participant</h1>

    <table class="table m-4 mx-auto">
        <tbody>
        <tr>
            <th>Pseudo</th>
            <td>{{ participant.pseudo }}</td>
        </tr>
        <tr>
        <tr>
            <th>Campus</th>
            <td>{{ participant.campus.nom }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN")%}
        <a href="{{ path('participant_index') }}">back to list</a>

        <a href="{{ path('participant_edit', {'id': participant.id}) }}">edit</a>

        {{ include('participant/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
